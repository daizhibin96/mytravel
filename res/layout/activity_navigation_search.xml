<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

     <RelativeLayout 
        android:id="@+id/hotellist_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#00B2EE"
        >
        <ImageView
            android:id="@+id/hotellist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button"
            />
         <EditText 
            android:id="@+id/hotellist_search"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/search_edittext_shape"
            android:drawableRight="@drawable/fragment_first_search_icon"
            />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/hotellist_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:layout_below="@+id/hotellist_title"
        />
    
</RelativeLayout>
