<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
        android:id="@+id/pointlist_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#00B2EE"
        android:focusable="true"
		android:focusableInTouchMode="true"
        >
        <ImageView
            android:id="@+id/pointlist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button"
            />
         <EditText 
            android:id="@+id/pointlist_search"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/search_edittext_shape"
            android:hint="请输入关键字"
            />
         <ImageView
             android:id="@+id/pointlist_search_img"
             android:layout_width="45dp"
             android:layout_height="45dp"
             android:layout_centerVertical="true"
             android:layout_alignRight="@+id/pointlist_search"
             android:layout_marginRight="10dp"
             android:background="@drawable/fragment_first_search_icon"
             />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/pointlist_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:layout_below="@+id/pointlist_title"
        /> 
    
</RelativeLayout>
