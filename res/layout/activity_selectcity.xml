<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    >

    <LinearLayout 
        android:id="@+id/selectcity_title"
        android:background="#00B2EE"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        >
        <ImageView 
            android:id="@+id/selectcity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_button"
            android:layout_marginTop="5dp"/>
      	<EditText
            android:id="@+id/slectcity_search"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="65dp"
            android:background="@drawable/search_edittext_shape"
            android:drawableRight="@drawable/fragment_first_search_icon"
           	android:drawablePadding="5dp"
            android:hint="请输入关键字"
            android:textSize="16sp" />
	</LinearLayout>
    <ListView
        android:id="@+id/selectcity_list"
        android:layout_width="80dp"
        android:layout_height="fill_parent" 
        android:background="#EAEAEA"
        android:layout_below="@+id/selectcity_title"
        android:divider="@null"
        android:listSelector="@drawable/listview_background"
        />
</RelativeLayout>