<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_rootView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6347"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_me_back1" />

        

    </RelativeLayout>
     
       
        <RelativeLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        
         >
        <ImageView
            android:id="@+id/fengmian"
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
           
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:text="勇闯天涯之天涯路" />

         </RelativeLayout>
         
     <RelativeLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

         <ImageView
             android:id="@+id/touxiang"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="22dp"
             android:src="@drawable/find1" />

         <TextView
             android:id="@+id/user"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/touxiang"
             android:layout_marginLeft="20dp"
             android:layout_toRightOf="@+id/touxiang"
             android:text="用户名" />

         <TextView
             android:id="@+id/time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/touxiang"
             android:layout_below="@+id/touxiang"
             android:text="发帖时间" />
        
        </RelativeLayout>
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <com.cn.travel.activity.find.InterceptLinearLayout
            android:id="@+id/line_intercept1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
         <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="图文详情"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.cn.travel.activity.find.RichTextEditor
                    android:id="@+id/richText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView26"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
         </com.cn.travel.activity.find.InterceptLinearLayout>
       
         </ScrollView>

</LinearLayout>
